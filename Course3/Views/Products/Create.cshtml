@model Course3.Models.Product;
<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Material" class="control-label"></label>
        <textarea asp-for="Material" class="form-control"></textarea>
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <textarea asp-for="Quantity" class="form-control"></textarea>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <textarea asp-for="Price" class="form-control"></textarea>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight" class="control-label"></label>
        <textarea asp-for="Weight" class="form-control"></textarea>
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Factory" class="control-label"></label>
        <textarea asp-for="Factory" class="form-control"></textarea>
        <span asp-validation-for="Factory" class="text-danger"></span>
    </div>
  
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CatalogId" class="control-label"></label>
        <textarea asp-for="CatalogId" class="form-control"></textarea>
        <span asp-validation-for="CatalogId" class="text-danger"></span>
    </div>


  <br/>
    <button type="submit" class="btn btn-primary">Create</button>
</form>