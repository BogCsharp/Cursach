@model IEnumerable<Course3.Models.Order>

<h2>Мои заказы</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Дата заказа</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Edit</a>

                        <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>У вас пока нет заказов</p>
}