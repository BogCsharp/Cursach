@model Course3.Models.Order

<h2>Order Details</h2>

<p>
    <strong>Order ID:</strong> @Model.Id <br />
    <strong>Order Date:</strong> @Model.OrderDate <br />
    <strong>Status:</strong> @Model.Status <br />
    <strong>Client Name:</strong> @Model.ClientName <br />
    <strong>Email:</strong> @Model.Email <br />
    <strong>Address:</strong> @Model.Address <br />
    <strong>Passport Number:</strong> @Model.PassportNumber <br />
    <strong>Phone Number:</strong> @Model.Number <br />
</p>

<h3>Ordered Items</h3>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("MyOrders", "Order")">Back to My Orders</a>
